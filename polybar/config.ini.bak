[colors]
background = #000000
background-alt = #1a0933
foreground = #cdd6f4
primary = #7b2cbf
secondary = #b4befe
alert = #f38ba8
disabled = #45475a

[bar/main]
width = 950%
height = 25pt
radius = 0
offset-x = 1%
offset-y = 1%
fixed-center = true
bottom = false
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3pt
border-size = 0pt
border-color = #00000000
padding-left = 1
padding-right = 1
module-margin = 1
separator = |
separator-foreground = ${colors.disabled}
font-0 = "JetBrainsMono Nerd Font:size=10;2"
font-1 = "Font Awesome 6 Free:style=Solid:size=10;2"
modules-left = wallpaper lock xworkspaces xwindow
modules-center = date
modules-right = alsa memory cpu wlan tray
cursor-click = pointer
cursor-scroll = ns-resize
enable-ipc = true

[module/wallpaper]
type = custom/text
format = "  "
format-foreground = ${colors.primary}
click-left = feh --bg-fill --randomize ~/.config/i3/backgrounds/* && notify-send "System" "Wallpaper Changed"
click-right= ~/.config/i3/scripts/bg-select.sh

[module/tray]
type = internal/tray
tray-padding = 4px
tray-size = 12
tray-spacing = 4px

[module/xworkspaces]
type = internal/xworkspaces
pin-workspaces = false
enable-click = true
enable-scroll = true
label-active = %name%
label-active-foreground = ${colors.primary}
label-active-background = ${colors.background}
label-active-underline = ${colors.primary}
label-active-padding = 1
label-occupied = %name%
label-occupied-foreground = ${colors.foreground}
label-occupied-padding = 1
label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1
label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1
format = <label-state>

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
label-foreground = ${colors.secondary}

[module/alsa]
type = internal/alsa
master-mixer = Speaker
master-soundcard = hw:1
format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
label-muted = "󰝟 "
label-muted-foreground = ${colors.disabled}
ramp-volume-0 = "󰕿 "
ramp-volume-1 = "󰖀 "
ramp-volume-2 = "󰕾 "
ramp-volume-foreground = ${colors.primary}

[module/memory]
type = internal/memory
interval = 2
format-prefix = "󰍛 "
format-prefix-foreground = ${colors.primary}
label = %percentage_used:2%%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "󰻠 "
format-prefix-foreground = ${colors.primary}
label = %percentage:2%%

[network-base]
type = internal/network
interval = 5
format-connected = <label-connected>
format-disconnected =

[module/wlan]
inherit = network-base
interface-type = wireless
label-connected = %{F#7b2cbf}󰖩 %{F-} %essid%

[module/date]
type = internal/date
interval = 1
date = %H:%M
label = " %date% "
label-background = #7b2cbf
label-foreground = #0f0914
format-prefix = "%{B#000000}%{F#3c096c}%{B#3c096c}%{F#5a189a}%{B#5a189a}%{F#7b2cbf}"
format-suffix = "%{B#5a189a}%{F#7b2cbf}%{B#3c096c}%{F#5a189a}%{B#000000}%{F#3c096c}"

[module/lock]
type = custom/text
format = " 󰌾 "
format-foreground = ${colors.primary}
click-left = i3lock -c 000000

[module/mpris]
type = custom/script
exec = if playerctl status > /dev/null 2>&1; then playerctl metadata --format '{{ title }}'; else echo ""; fi
interval = 2
format = <label>
format-prefix = "󰎆 "
format-prefix-foreground = ${colors.primary}
label = %output:0:15:...%
label-foreground = ${colors.secondary}
click-left = playerctl play-pause
click-right = playerctl next
click-middle = playerctl previous
scroll-up = playerctl next
scroll-down = playerctl previous

[settings]
screenchange-reload = true
pseudo-transparency = true
